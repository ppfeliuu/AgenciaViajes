extends ../layout/index
block contenido
    main.container.mt-5
        .row
            .col-md-5
                img(src=`/img/destinos_${viaje.imagen}_ln.jpg`, class="img-fluid")
            .col-md-7
                h1 #{viaje.titulo}
                p
                    i.fas.fa-calendar-alt.mx-2
                    | Fecha Ida: #{viaje.fecha_ida} - Fecha Vuelta: #{viaje.fecha_vuelta}
                p
                    i.fas.fa-euro-sign.mx-2
                    | #{viaje.precio}
                p
                    i.fas.fa-users.mx-2
                    | #{viaje.disponibles}  Disponibles
                p= viaje.descripcion.substr(0,100)